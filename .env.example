# =============================================================================
# INDIACHAN - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to git!
# =============================================================================

# -----------------------------------------------------------------------------
# Next.js Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# MongoDB Atlas (Primary Database)
# -----------------------------------------------------------------------------
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
# Get from: https://cloud.mongodb.com/ -> Connect -> Connect your application
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/indiachan?retryWrites=true&w=majority

# Database name (usually same as in URI)
MONGODB_DB=indiachan

# -----------------------------------------------------------------------------
# NextAuth.js (Authentication)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-min-32-chars-long-generate-with-openssl

# Same as NEXT_PUBLIC_APP_URL in production, or your deployment URL
NEXTAUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Cloudflare R2 (File Storage)
# -----------------------------------------------------------------------------
# Get from: Cloudflare Dashboard -> R2 -> Manage R2 API Tokens
# Create API token with "Object Read & Write" permissions

# R2 Account ID (found in R2 dashboard URL)
R2_ACCOUNT_ID=your-account-id

# R2 Access Key ID and Secret (from API token)
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key

# R2 Bucket Name (create in R2 dashboard)
R2_BUCKET_NAME=indiachan-uploads

# R2 Public URL (optional - for custom domain)
# If using R2.dev subdomain: https://pub-xxxxx.r2.dev
# If using custom domain: https://cdn.indiachan.com
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# -----------------------------------------------------------------------------
# Vercel KV (Redis Cache & Sessions) - Required
# -----------------------------------------------------------------------------
# Get from: Vercel Dashboard -> Storage -> Create KV Database
# Vercel auto-populates REDIS_URL when you create KV database
# Format: redis://default:password@host:port
REDIS_URL=redis://default:password@host:6379

# -----------------------------------------------------------------------------
# Vercel Blob (Alternative to Firebase Storage) - Optional
# -----------------------------------------------------------------------------
# Get from: Vercel Dashboard -> Storage -> Create Blob Store
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_XXXXXXXXXXXXXXXX

# -----------------------------------------------------------------------------
# Google reCAPTCHA v3 (Invisible)
# -----------------------------------------------------------------------------
# Get from: https://www.google.com/recaptcha/admin/create
# Select: reCAPTCHA v3
# Add domains: localhost, your-domain.com

# Public reCAPTCHA (Optional but recommended)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-site-key
RECAPTCHA_SECRET_KEY=your-secret-key

# Minimum score (0.0-1.0, recommended: 0.5)
RECAPTCHA_MIN_SCORE=0.5

# Disable captcha for development (optional)
NO_CAPTCHA=false

# -----------------------------------------------------------------------------
# Email (Optional - for notifications, password reset)
# -----------------------------------------------------------------------------
# Using Resend (recommended): https://resend.com/
# EMAIL_FROM=noreply@yourdomain.com
# RESEND_API_KEY=re_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# CSRF token secret (generate with: openssl rand -base64 32)
CSRF_SECRET=your-csrf-secret-key-min-32-chars

# Cookie secret (generate with: openssl rand -base64 32)
COOKIE_SECRET=your-cookie-secret-key-min-32-chars

# Cron secret for Vercel Cron jobs (generate with: openssl rand -base64 32)
CRON_SECRET=your-cron-secret-key-min-32-chars

# Enable secure cookies (set to true in production)
SECURE_COOKIES=false

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Site name
NEXT_PUBLIC_SITE_NAME=Indiachan
NEXT_PUBLIC_SITE_DESCRIPTION=India's uncensored community where your voice is truly free

# Discord invite link (optional)
NEXT_PUBLIC_DISCORD_INVITE=https://discord.gg/your-invite

# Posts per page
POSTS_PER_PAGE=10

# Threads per page
THREADS_PER_PAGE=10

# Max threads per board
MAX_THREADS_PER_BOARD=100

# Post cooldown in seconds
POST_COOLDOWN=30

# Thread cooldown in seconds
THREAD_COOLDOWN=300

# -----------------------------------------------------------------------------
# Logging & Monitoring (Optional)
# -----------------------------------------------------------------------------
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
